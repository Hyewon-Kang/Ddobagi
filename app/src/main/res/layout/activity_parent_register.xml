<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    tools:context=".parentRegister">
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/parent_name"
            android:hint="Parent Name"
            android:singleLine = "true"
            android:lines = "1"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/parent_phone"
            android:hint="Parent Phone Number"
            android:singleLine = "true"
            android:lines = "1"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="15dp" />
        <Button
            android:text="저장"
            android:id="@+id/parent_add"
            android:layout_gravity="center_horizontal"
            android:background="#ffbb00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="저장된 보호자 번호"
            android:textSize="25dp"
            android:id="@+id/title_parent"
            android:visibility="invisible"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="이름 : "
            android:textSize="17dp"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:id="@+id/ss_parnet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="번호 : "
            android:textSize="17dp"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:id="@+id/ss_parent_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>




</LinearLayout>