<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".checkMessage">

        <TextView
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="친구에게 온 쪽지를 확인하세요 :)"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp" />

        <TextView
            android:text="제목 : "
            android:id="@+id/text_ck"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title_ck"
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_alignTop="@+id/text_ck"
            android:layout_toRightOf="@+id/text_ck"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/from_id"
            android:text="보낸 사람 : "
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/title_ck"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/in_id"
            android:textColor="#000000"
            android:textSize="17dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/from_id"
            android:layout_alignTop="@+id/from_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/content_ck"
            android:layout_below="@+id/from_id"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/bgbgbg"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp"/>

        <Button
            android:text="답장하기"
            android:id="@+id/resend"
            android:layout_below="@+id/content_ck"
            android:background="#ffbb00"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="목록보기"
            android:id="@+id/list"
            android:layout_below="@+id/content_ck"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="30dp"
            android:background="#ffbb00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>